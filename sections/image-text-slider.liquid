      "settings": [
        {
          "type": "image_picker",
          "label": "Add an image of person",
          "id": "person_image"
        },
        {
          "type": "text",
          "label": "Enter Name",
          "id": "person_name"
        },
        {
          "type": "textarea",
          "label": "person_details",
          "id": "person_details"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image-text-slider"
    }
  ]
}
