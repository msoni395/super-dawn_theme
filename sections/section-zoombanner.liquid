<div class="outerContainer page-width">
<div class="banner-wrapper-outer">
<div class="banner-wrapper">
  <div class="banner-overlay "></div>
  <img src="{{ section.settings.zb_image | img_url:"master" }}" alt="Banner Image">
 {% if section.settings.btn_txt!=blank %}
  <div class="banner-text">
      <a href="{{ section.settings.btn_url }}" class="btn"> <h2> {{ section.settings.btn_txt }}</h2></a>
  </div>
{% endif %}
</div>
  </div>
  </div>
  
<style>
 .banner-wrapper-outer{
    transform: translateZ(0) scale(1);
    transition: transform 0.5s ease-in-out;
 }
.banner-wrapper-outer:hover{
    transform: translateZ(0) scale(.9);
 }
  
 .banner-wrapper {
  position: relative;
  overflow: hidden;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  transition: opacity 2s cubic-bezier(0.23, 1, 0.32, 1);
}

.banner-wrapper:hover .banner-overlay {
  opacity: 1;
}

.banner-wrapper img {
  display: block;
  width: 100%;
  height: auto;
  transition: transform 2s cubic-bezier(0.66,0,0.34,1);
}

.banner-wrapper:hover img {
  transform: scale(1.1);
}

.banner-text {
  position: absolute;
  top: 75%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #000;
  opacity: 0;
  transition: opacity 0.5s cubic-bezier(0.66,0,0.34,1);
}

.banner-text h2 {
  font-size: 2.5rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin: 0;
  padding:10px;
  color: rgb(var(--color-button-text));
  background-color: rgba(var(--color-button),var(--alpha-button-background));
}

.banner-wrapper:hover .banner-text {
  opacity: 1;
}

</style> 
