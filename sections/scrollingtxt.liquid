{% schema %}
  {
    "name": "Scrolling Text",
    "settings": [
      {
        "type": "textarea",
        "id": "scrolling_text",
        "label": "Scrolling Text"
      },
      {
        "type": "range",
        "id": "scroll_speed",
        "label": "Scroll Speed",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 5
      },
      {
        "type": "select",
        "id": "scroll_direction",
        "label": "Scroll Direction",
        "default": "left",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "right", "label": "Right" },
          { "value": "up", "label": "Up" },
          { "value": "down", "label": "Down" }
        ]
      },
      {
        "type": "image_picker",
        "id": "scroll_image",
        "label": "Scroll Image"
      },
      {
        "type": "checkbox",
        "id": "scroll_repeat",
        "label": "Repeat scrolling text",
        "default": true
      }
    ]
  }
{% endschema %}
<div class="scrolling-outer page-width">
  <div class="scrolling-text">
 <marquee behavior="scroll" direction="{{ section.settings.scroll_direction }}" scrollamount="{{ section.settings.scroll_speed }}" loop="4">
  {% if section.settings.scroll_image %}
    <img src="{{ section.settings.scroll_image | img_url }}" alt="Scroll Image">
  {% endif %}
  {{ section.settings.scrolling_text }}
</marquee>
  </div>
</div>