<style>
 
  .blockk-outer{
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
  }

  .Outer-teamContainer{
    margin-top:25px;
    margin-bottom:25px;
  }
  .team-card {
  position: relative;
  width: 300px;
  height: 400px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  overflow: hidden;
     margin:0 auto;
}

.team-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;   
}

.socialy-icons {
  position: absolute;
  bottom: 0px;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: rgb(245 245 245 / 0%);
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translateY(80px);
  transition: transform 0.3s ease-in-out;
}

.socialy-icons a {
  color: #fff;
  font-size: 1.5rem;
  margin: 0 10px;
  transition: transform 0.3s ease-in-out;
}

.socialy-icons a:hover {
  transform: scale(1.2);
}

.team-card:hover .socialy-icons {
  transform: translateY(0);
}
 .fa-facebook-f {
  color: #3b5998;
}
.fa-twitter {
  color: #1da1f2;
}
.fa-instagram {
  color: #e4405f;
}  .fa-google {
  color: #e4405f;
}     
  .descr-member h2, .descr-member p{
    margin: 0;
  }
  .descr-member{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  background-color: rgb(252 251 251 / 73%);
    color: #000000;
  } 
  
  @media screen and (max-width: 767px) {
