<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="Outer-teamContainer">
 <div class="inner-teamContainer page-width">
   <h3> {{ section.settings.team_heading }}</h3>
<div class="blockk-outer">
  {%- for block in section.blocks -%}
  <div class="team-card"> 
 <img src="{{ block.settings.member_photo |img_url:'master' }} " > 
 <div class="descr-member">
     <h2>{{ block.settings.member_name }} </h2>
    <p>{{ block.settings.member_position }} </p>
 <div class="socialy-icons">
    {% if block.settings.member-fb!=blank %} <a href="{{ block.settings.member-fb }}"><i class="fab fa-facebook-f"> </i></a>{% endif %}
    {% if block.settings.member-ig!=blank %} <a href="{{ block.settings.member-ig }}"><i class="fab fa-instagram"> </i></a>   {% endif %}
    {% if block.settings.member-tw!=blank %} <a href="{{ block.settings.member-tw }}"><i class="fab fa-twitter"> </i></a>  {% endif %}
    {% if block.settings.member-gmail!=blank %} <a href="{{ block.settings.member-gmail }}"><i class="fab fa-google"> </i></a>{% endif %}
  </div> 
 </div>   
  </div>
  
  {% endfor %}
</div>
 </div>
  
</div>


{% schema %}
{
  "name": "The Team",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "label": "Team Heading",
      "id": "team_heading",
      "default": "The Team"
    }
  ],
  "blocks": [
    {
      "type": "team-member",
      "name": "team-member",
      "settings": [
        {
          "type": "text",
          "label": "Member Name",
          "id": "member_name"
        },
        {
          "type": "text",
          "label": "Member Position",
          "id": "member_position"
        },
        {
          "type": "image_picker",
          "label": "Member Photo",
          "id": "member_photo"
        },
        {
          "type": "url",
          "label": "Facebook",
          "id": "member-fb"
        },
        {
          "type": "url",
          "label": "Instagram",
          "id": "member-ig"
        },
        {
          "type": "url",
          "label": "Twitter",
          "id": "member-tw"
        },
        {
          "type": "url",
          "label": "Gmail",
          "id": "member-gmail"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "The Team"
    }
  ]
}
{% endschema %}

